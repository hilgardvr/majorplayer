<div id="home">
    <h4>Logged in as {{player.user.email}}</h4>
    <h3>Selected golfers</h3>
    <h4>{{player}}</h4>
    <div>
        {{^validationError}}
            <button hx-post="/save-team">Save Team</button>
        {{/validationError}}
        {{#validationError}}
            <h4>{{.}}</h4>
        {{/validationError}}
    </div>

    {{#player.selected}}
        <div>
            <button
                hx-put="/deselect/{{id}}"
                hx-swap="outerHTML"
                hx-target="#home"
                >
                {{ranking}} - {{name}}
            </button>
        </div>
    {{/player.selected}}
    <h3>Pick your golfers</h3>
    {{#golfers}}
        <div>
            <button
                hx-put="/select/{{id}}"
                hx-swap="outerHTML"
                hx-target="#home"
                >
                {{ranking}} - {{name}}
            </button>
        </div>
    {{/golfers}}
</div>
