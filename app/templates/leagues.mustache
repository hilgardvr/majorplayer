<div>
    {{#adminLeagues}}
        <p><b>{{ name }}</b> (Admin - new member join passcode <b>{{passcode}}</b>)</p>
    {{/adminLeagues}}
    {{#leagues}}
        <p><b>{{ name }}</b></p>
    {{/leagues}}
    <form>
        <input
            type="text" 
            name="league-passcode"
            placeholder="League Passcode"
        />
        <button
            hx-post="/join-league"
            hx-target="#home"
        >Join League</button>
    </form>
    <form>
        <div id="league-validation">
        </div>
        <input
            type="text" 
            name="league-name"
            hx-post="/validate-league-name"
            hx-trigger="keyup changed delay:1.5s"
            hx-target="#league-validation"
            placeholder="League Name"
        />
        <button 
            hx-post="/create-league"
            hx-target="#home"
        >
            Create League
        </button>
    </form>
</div>
