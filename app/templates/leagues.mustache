<div>
    <form hx-post="/join-league">
        <input
            type="text" 
            name="league-name"
            hx-post="/join-league"
            hx-target="#home"
            placeholder="League Name"
        />
        <button type="submit">Join League</button>
    </form>
    {{#leagues}}
        <p>name {{ name }}</p>
    {{/leagues}}
    <form hx-post="/create-league">
        <div id="league-validation">
        </div>
        <input
            type="text" 
            name="league-name"
            hx-post="/validate-league-name"
            hx-trigger="keyup changed delay:1.5s"
            hx-target="#league-validation"
            placeholder="League Name"
        />
        <input
            type="text" 
            name="league-passcode"
            placeholder="Optional League Passcode"
        />
        <button 
            hx-post="/create-league"
            hx-target="#home"
        >
            Create League
        </button>
    </form>
</div>
